<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:fontFamily="@font/bookerly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_type_title" />

    <Spinner
        android:fontFamily="@font/bookerly"
        android:id="@+id/filter_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/filter_types" />

    <TextView
        android:fontFamily="@font/bookerly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_order_title" />

    <Spinner
        android:fontFamily="@font/bookerly"
        android:id="@+id/filter_order_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/filter_orders" />

</LinearLayout>